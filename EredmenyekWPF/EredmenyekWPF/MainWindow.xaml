<Window x:Class="EredmenyekWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EredmenyekWPF"
        mc:Ignorable="d"
        Title="Háziverseny" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <ListBox x:Name="lbxNevek" SelectionChanged="lbxNevek_SelectionChanged">
            
            <ListBoxItem Content="Ide kerülnek a nevek"/>
        </ListBox>

        <StackPanel Grid.Column="1" >
            <Label Content="Sorszám:"/>
            <TextBox x:Name="tbxSorszam"   />
            <Label Content="Név:"/>
            <TextBox Name="tbxNev"  />
            <Label Content="Pontszám:"/>
            <TextBox Name="tbxPontszam"  />
            <Label Content="1.feladat:"/>
            <TextBox Name="tbx1Feladat"  />
            <Label Content="2.feladat:"/>
            <TextBox Name="tbx2Feladat"  />
            <Label Content="3.feladat:"/>
            <TextBox Name="tbx3Feladat"   />


        </StackPanel>
    </Grid>
</Window>
