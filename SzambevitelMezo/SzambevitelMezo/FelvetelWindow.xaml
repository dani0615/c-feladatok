<Window x:Class="SzambevitelMezo.FelvetelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SzambevitelMezo"
        mc:Ignorable="d"
        Title="Új kedvenc felvétele" Height="470" Width="400">
    <StackPanel>
        <Label Content="Név *"/>
        <TextBox x:Name="tbxNev"/>
        <Label Content="Faj *"/>
        <TextBox x:Name="tbxFaj"/>
        <Label Content="Fajta *"/>
        <TextBox x:Name="tbxFajta"/>
        <Label Content="Nem *"/>
        <TextBox x:Name="tbxNem"/>
        <Label Content="Szín *"/>
        <TextBox x:Name="tbxSzin"/>
        <Label Content="Születési dátum *"/>
        <DatePicker x:Name="dpSzuletesiDatum"/>
        <Label Content="Súly *"/>
        <TextBox x:Name="tbxSuly"/>
        <Label Content="Kedvenc Étel"/>
        <TextBox x:Name="tbxKedvencEtel"/>
        <Label Content="Kedvenc Játék"/>
        <TextBox x:Name="tbxKedvencJatek"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0"  >
            <Button Content="Felvétel" Name="btnFelvetel" Margin="0,0,20,0" Click="btnFelvetel_Click"  />
            <Button Content="Mégsem" Name="btnMegse" Click="btnMegse_Click" />
        </StackPanel>
    </StackPanel>
</Window>
