<Window x:Class="Orai_03._10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Orai_03._10"
        mc:Ignorable="d"
         Title="Számozott gombok" Height="600" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBox Name="tbxSzam" Width="100"/>
            <Button Content="Generálás" Click="btnAdd_Click"  Padding="3" Margin="3"/>
            <TextBox x:Name="tbxSzamok2" InputScope="Number" Text="0" Width="80"  TextChanged="tbxSzamBevitel_TextChanged" />
        </StackPanel>
        <Grid Name="gridGombok" Grid.Row="1"/>
    </Grid>

</Window>
