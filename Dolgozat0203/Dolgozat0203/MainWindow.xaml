<Window x:Class="Dolgozat0203.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dolgozat0203"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="505">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <ComboBox Name="cbxDatumok" HorizontalAlignment="Left"  Margin="5,5,0,0" VerticalAlignment="Top" Width="250" Height="30" SelectionChanged="cbxDatumok_SelectionChanged"/>
        <ListBox Grid.Column="1" Name="lbxDatum" SelectionChanged="lbxDatum_SelectionChanged" HorizontalAlignment="Center" Margin="0,0,0,4" Width="233"  />
        <Image x:Name="imgSmile" Margin="5,100,0,0" Height="50" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top" />

    </Grid>
</Window>
